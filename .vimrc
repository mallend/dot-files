set rtp+=~/.vim/bundle/lightline.vim
set rtp+=~/.fzf
set rtp+=~/.vim/bundle/vim-buftabline
set number	
set linebreak
set showbreak=+++	
set textwidth=100
set smartcase
set autoindent
set ignorecase	
set incsearch	
set autoindent
set smartindent
set softtabstop=3
set undolevels=1000
set backspace=indent,eol,start
set noshowmode
set laststatus=2
syntax on
nnoremap <S-HOME> :bprevious<ENTER>
nnoremap <S-END> :bNext<ENTER>
colorscheme mustang_vim_colorscheme_by_hcalves
